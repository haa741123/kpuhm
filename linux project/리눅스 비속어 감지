#!/bin/bash
# 메인 메뉴
cat << "EOF"
#       ### #     # #     # #     #    #     #    #    ### #           #####  #     #  #####  ####### ####### #     # 
#        #  ##    # #     #  #   #     ##   ##   # #    #  #          #     #  #   #  #     #    #    #       ##   ## 
#        #  # #   # #     #   # #      # # # #  #   #   #  #          #         # #   #          #    #       # # # # 
#        #  #  #  # #     #    #       #  #  # #     #  #  #           #####     #     #####     #    #####   #  #  # 
#        #  #   # # #     #   # #      #     # #######  #  #                #    #          #    #    #       #     # 
#        #  #    ## #     #  #   #     #     # #     #  #  #          #     #    #    #     #    #    #       #     # 
####### ### #     #  #####  #     #    #     # #     # ### #######     #####     #     #####     #    ####### #     # 

EOF
echo "-----------------------------------------------------------------------------"
echo "메일 전송 프로그램입니다."
echo "번호를 입력하세요"
echo "-----------------------------------------------------------------------------"
# 모든 사용자 메세지
echo -n "1. 모든 사용자에게 메세지 전달(ADMIN MODE ONLY)

2. 특정 사용자에게 메세지 전달 

3. 현재 메세지 수신 설정을 확인 

종료하려면 CTRL + C 키를 눌러주세요
-----------------------------------------------------------------------------
:"

read setting
 
if [ $setting -eq 1 ]
then
echo -n "메세지를 입력하시오 : "
read message
sudo wall "$message"

# 특정 사용자 메세지
elif [ $setting -eq 2 ]
then
echo "2. 특정 사용자에게 메일 전송"

echo -n "사용자 ID: "
read email

# 욕설감지
echo -n "체팅을 입력하시오 :"
read chat

if  [[ "$chat" =~ "씨발" ]]
then
echo "비속어 감지!
프로그램을 종료합니다"

else
talk $emails $chat
fi

# 메세지 수신상태 확인
elif [ $setting -eq 3 ]
echo "메세지 수신상태를 확인합니다"
then
susin=`mesg`
if [[ "$susin" =~ "y" ]]
then
echo "메세지 수신이 허용 상태입니다!"

elif [[ "$susin" =~ "n" ]]
then
echo "메세지 수신이 거부 상태입니다!"
fi
fi

